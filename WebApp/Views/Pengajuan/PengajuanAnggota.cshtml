@{
	Layout = "_AnggotaLayout";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800"><i class="fas fa-fw fa-location-arrow"></i> Data Pengajuan</h1>
	<button type="button" class="btn btn-primary" data-toggle="modal" id="bntAddData" data-target="#addModal"> <i class="fa fa-plus"></i> Tambah Data</button>
</div>

<div class="card shadow mb-4">
	<!-- /.card-header -->
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary"><i class="fa fa-table"></i> Daftar Data Pengajuan</h6>
	</div>

	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered text-center" id="TablePengajuanAnggota" width="100%" cellspacing="0">
				<thead class="bg-primary text-white">
					<tr align="center">
						<th width="5%">No</th>
						<th>Kode Pengajuan</th>
						<th>Tanggal Pengajuan</th>
						<th>Nama Anggota</th>
						<th>Jenis Pinjaman</th>
						<th>Besar Pinjaman</th>
						<th>Status</th>
						<th>Tanggal Terima</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
	</div>
</div>

<!--   Modals   -->

<!--   Modal (Tambah Data)   -->
<div class="modal fade" id="addModal" tabindex="1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="m-0 text-primary" id="exampleModalLabel"><i class="fas fa-fw fa-plus"></i> Tambah Data Pengajuan</h5>
			</div>
			<div class="modal-body">

				<div class="row">
@*					<div class="form-group col-md-6">
						<label class="font-weight-bold">Kode Pengajuan</label>
						<input autocomplete="off" type="text" id="kode_pengajuan" readonly required class="form-control"/>
					</div>
*@
					<div class="form-group col-md-6">
						<label class="font-weight-bold">ID User</label>
						<input autocomplete="off" type="text" id="id_user" required="required" class="form-control" />
					</div>

					<div class="form-group col-md-6">
						<label class="font-weight-bold">Id Jenis Pinjaman</label>
						<input autocomplete="off" type="text" id="jenis_pinjaman" required class="form-control" />
					</div>

					<div class="form-group col-md-6">
						<label class="font-weight-bold">Besar Pinjaman</label>
						<input autocomplete="off" type="text" id="besar_pinjaman" required class="form-control" />
					</div>

@*					<div class="form-group col-md-6">
						<label class="font-weight-bold">Besar Angsuran</label>
						<input autocomplete="off" type="text" id="besar_angsuran" required class="form-control" />
					</div>*@

@*					<div class="form-group col-md-6">
						<label class="font-weight-bold">Status</label>
						<input autocomplete="off" type="text" id="status" required class="form-control" />
					</div>*@

					<div class="form-group col-md-6">
						<label class="font-weight-bold">Tanggal Pengajaun</label>
						<input autocomplete="off" type="text" value="@DateTime.Now.ToString("MM/dd/yyyy")" id="tgl_pengajuan" readonly required class="form-control" />
						<input autocomplete="off" value="@DateTime.Now" type="hidden" id="tgl_acc" readonly required class="form-control" />
					</div>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" onclick="addPengajuanAnggota()"><i class="fa fa-save"></i> Simpan</button>
				<button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Tutup</button>
			</div>
		</div>
	</div>
</div>
